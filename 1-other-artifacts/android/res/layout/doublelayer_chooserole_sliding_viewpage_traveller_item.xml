<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <TextView
        android:id="@+id/topicTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/descriptionContents"
        android:layout_marginTop="@dimen/doublelayer_sliding_tv_topictitle_margin_top"
        android:text="1234"
        android:textColor="@color/white"
        android:textSize="@dimen/doublelayer_sliding_tv_topictitle_textsize" />

    <ImageView
        android:id="@+id/iv_top_underline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/doublelayer_sliding_iv_underline_height"
        android:layout_below="@+id/topicTitle"
        android:layout_marginTop="10dp"
        android:contentDescription="@null"
        android:src="@color/lightgray" />

    <TextView
        android:id="@+id/descriptionContents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_top_underline"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/layout_nagivation"
        android:text="1234"
        android:textColor="@color/white"
        android:textSize="@dimen/doublelayer_sliding_tv_descriptionContents_textsize" />

    <Button
        android:id="@+id/loginButtonTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/doublelayer_sliding_iv_underline_margin_bottom"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:gravity="center_vertical|center_horizontal"
        android:text="loginButtonTitle"
        android:textColor="@color/white"
        android:textSize="@dimen/doublelayer_sliding_tv_loginButtonTitle_textsize" />

    <RelativeLayout
        android:id="@+id/layout_nagivation"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/ventoura_blue" >

        <ImageView
            android:id="@+id/nagivation_image_view"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:src="@drawable/arrow_to_right_black" />
    </RelativeLayout>

</RelativeLayout>