<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_tags_display_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/layout_tags_display_row_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent" >

        <TextView
            android:id="@+id/tv_tags_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/tag"
            android:gravity="center_vertical"
            android:maxLength="15"
            android:paddingRight="2dp"
            android:singleLine="true"
            android:text="1111111111111111111111111111111111111111111111111"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_cancel_tags_left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignRight="@+id/tv_tags_left"
            android:layout_marginRight="-10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/delete_guide_attraction" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_tags_display_row_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/layout_tags_display_row_left"
        android:background="@android:color/transparent" >

        <TextView
            android:id="@+id/tv_tags_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/tag"
            android:gravity="center_vertical"
            android:maxLength="15"
            android:paddingRight="2dp"
            android:singleLine="true"
            android:text="1111"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_cancel_tags_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignRight="@+id/tv_tags_right"
            android:layout_marginRight="-10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/delete_guide_attraction" />
    </RelativeLayout>

</RelativeLayout>