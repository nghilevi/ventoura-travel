<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_transparent_diamond"
            android:orientation="vertical" >

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@android:color/transparent" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/doublelayer_sliding_iv_height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/doublelayer_sliding_iv_margin_top"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/ventoura_pin_logo" />

            <ImageView
                android:id="@+id/iv_bottom_underline"
                android:layout_width="match_parent"
                android:layout_height="@dimen/doublelayer_sliding_iv_underline_height"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/doublelayer_sliding_iv_underline_margin_bottom"
                android:contentDescription="@null"
                android:src="@color/lightgray" />

            <TextView
                android:id="@+id/tv_login_as"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/iv_bottom_underline"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:text="@string/chooseRole_title"
                android:textColor="@color/white"
                android:textSize="@dimen/doublelayer_sliding_tv_login_as_textsize" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_transparent_diamond" >
    </RelativeLayout>

</FrameLayout>