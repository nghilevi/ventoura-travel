<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_gallery_whole"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_gallery_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/title_bar_back_action" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/border_activity_input_box"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/activity_input_et_input_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:inputType="textMultiLine"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:textColor="@color/black"
            android:textSize="@dimen/activity_input_content_text_size" />

        <TextView
            android:id="@+id/activity_et_left_number_input_characters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textColor="@color/gray"
            android:textSize="@dimen/activity_input_left_number_characers_size" />
    </LinearLayout>

</LinearLayout>