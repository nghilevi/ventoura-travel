<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_traveller_promotion_select_city"
    android:layout_width="@dimen/traveller_promotion_dream_city_wh"
    android:layout_height="@dimen/traveller_promotion_dream_city_wh" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/traveller_promotion_dream_trip_city00"
                style="@style/promotion_dream_trip_city_button_default_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Add City" />

            <Button
                android:id="@+id/traveller_promotion_dream_trip_city01"
                style="@style/promotion_dream_trip_city_button_default_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Add City" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/traveller_promotion_dream_trip_city02"
                style="@style/promotion_dream_trip_city_button_default_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Add City" />

            <Button
                android:id="@+id/traveller_promotion_dream_trip_city03"
                style="@style/promotion_dream_trip_city_button_default_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/promotion_add_city_default_bg"
                android:text="Add City" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>